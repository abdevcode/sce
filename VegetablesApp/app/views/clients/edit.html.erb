<div class="client"style="margin-left:20px; margin-top:20px;">
  <%= form_for(@client) do |f| %>
    <div class="field">
      <p> <%= f.label :name %></p>
      <%= f.text_field :name%>
    </div>
    <div class="field">
      <p> <%= f.label :surname%></p>
      <%= f.text_field :surname%>
    </div>
    <div class="field">
      <p><%= f.label :address %></p>
      <%= f.text_field :address %>
    </div>
    <div class="field">
      <%= f.label :city %>
      <br><%= f.text_field :city %>
    </div>
    <div class="field">
      <%= f.label :zip %>
      <br><%= f.text_field :zip %>
    </div>
    <div class="field">
      <%= f.label :age%>
      <br><%= f.text_field :age %>
    </div>
    <div class="field">
      <%= f.label :gender%>
      <br><%= f.text_field :gender %>
    </div>
    <div class="field">
      <%= f.label :email%>
      <br><%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password%>
      <br><%= f.password_field :password %>
    </div>
    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>
</div>