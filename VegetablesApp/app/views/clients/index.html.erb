    <div class="checkout__form">
      <h4><%= t :Perfil_client %></h4>
        <div class="row">
          <div class="col-lg-8 col-md-6">
            <div class="col-lg-6">
              <div class="checkout__input">
                <p> <%= t :nom %>: <%=@client.name %></p>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="checkout__input">
                <p> <%= t :cognom %>: <%=@client.surname %></p>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="checkout__input">
                <p> <%= t :direccio %>: <%= @client.address %></p>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="checkout__input">
                <p> <%= t :ciutat %>: <%= @client.city %></p>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="checkout__input">
                <p> <%= t :zip %>: <%= @client.zip %></p>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="checkout__input">
                <p> <%= t :edat %>: <%= @client.age %></p>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="checkout__input">
                <p> <%= t :genere %>: <%= @client.gender %></p>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="checkout__input">
                <p> <%= t :genere %>: <%= @client.email %></p>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="checkout__input">
                <p> <%= t :pref %>: <%= @client.preference %></p>
              </div>
            </div>
          </div>
        </div>
    </div>
  </div>
</section>
