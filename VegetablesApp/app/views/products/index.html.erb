<section class="featured spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title">
          <h2><%=t :tipus_q %></h2>
        </div>
        <div class="featured__controls">
        </div>
      </div>
    </div>
    <div class="row featured__filter">
      <% @products_cist.uniq.each do |p| %>
        <div class="col-lg-3 col-md-4 col-sm-6 mix oranges fresh-meat">
          <div class="featured__item">
            <div class="featured__item__pic set-bg" data-setbg="<%=  p.image %>">
              <ul class="featured__item__pic__hover" data-turbolinks="false">
                <%if admin_signed_in? %>
                  <li><%= link_to '', '/products/'+p.id.to_s+'/edit', :class => 'fa fa-edit'%> </li>
                  <li><%= link_to '', product_path(p) , method: :delete, data: { confirm: t("confirm") } , :class => 'fa fa-trash' %></li>
                <% end %>
                <!-- Ponemos la llamada POST del producto a la lista de la compra -->
                <!-- <li><a href=><i class="fa fa-shopping-cart"></i></a></li> -->
                <li > <%= link_to({:controller => "cart", :action => :addprod, :item => p.id }, {:method => :post}) do %>
                    <i class="fa fa-shopping-cart"></i>
                  <% end %> </li>





              </ul>
            </div>
            <div class="featured__item__text" data-turbolinks="false">
              <!-- <h6><a href="#">< %= p.name %></a></h6> -->

              <h6><%= link_to p.name, product_path(p) %></h6>

              <h5><%= p.price %> â‚¬</h5>
            </div>
          </div>
        </div>
      <%end %>
    </div>
  </div>
</section>


