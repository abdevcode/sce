<!-- Page Preloder -->
<div id="preloder">
  <div class="loader"></div>
</div>

<!-- Hero Section Begin -->
<section class="hero">
  <div class="container">
    <hr style="border-color:white;">
    <div class="row">
      <div class="col-lg-9">
        <div class="hero__search">
          <div class="easy-autocomplete">
            <%= form_with url: search_page_path, local: true, :method => "get", html: {class: "form-inline my-2 my-lg-0", id: "buscador"}  do |form| %>
              <%= form.text_field :search, placeholder: "Search", data: {behavior: "autocomplete"}, class: "form-control mr-sm-2" %>
              <%= form.button "Buscar", class: "btn btn-outline-success my-2 my-sm-0" %>
            <% end %>
          </div>
          <div class="hero__search__phone">
            <div class="hero__search__phone__icon">
              <i class="fa fa-phone"></i>
            </div>
            <div class="hero__search__phone__text">
              <h5>600 000 000</h5>
              <span>Suport 24/7 time</span>
            </div>
          </div>
        </div>
        <div class="hero__item set-bg" data-setbg="/assets/hero/banner.jpg">
          <div class="hero__text">
            <span><%= t :fruit %></span>
            <h2><%= t :veg %> <br />100% <%= t :org %></h2>
            <p><%= t :envio %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- Hero Section End -->

